{
  "name": "hitokoto",
  "version": "1.8.0-dev",
  "description": "Fast & Powerful Hitokoto API Framework.",
  "main": "core.js",
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "start": "node core",
    "dev": "yarn nodemon core.js -D",
    "pnpify": "yarn dlx @yarnpkg/pnpify",
    "build": "esbuild --bundle --minify --platform=node --outfile=dist/server.js core.js",
    "lint": "eslint ./src/**/*.js ./adapter/**/*.js ./test/**/*.js core.js",
    "watch": "yarn dlx supervisor --watch \".\" --extensions \"js,json\" --exec \"yarn\" -- \"start\"",
    "test": "jest --verbose",
    "commit": "yarn dlx git-cz",
    "release": "yarn dlx release-it",
    "changelog": "yarn dlx -p conventional-changelog-cli conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0 -n .changelog.config.js",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "repository": "https://github.com/hitokoto-osc/hitokoto-api",
  "author": "a632079 <a632079@qq.com>",
  "license": "MIT",
  "private": true,
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.2",
    "@commitlint/config-conventional": "18.4.2",
    "@sentry/utils": "^7.80.1",
    "@types/jest": "29.5.8",
    "@types/lodash-es": "^4.17.11",
    "@types/nconf": "^0.10.6",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "commitizen": "4.3.0",
    "conventional-changelog-conventionalcommits": "7.0.2",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "^0.19.5",
    "eslint": "8.53.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-html": "7.1.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jest": "27.6.0",
    "eslint-plugin-n": "16.3.1",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-promise": "6.1.1",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-extended": "4.0.2",
    "lint-staged": "15.1.0",
    "lodash-es": "^4.17.21",
    "nodemon": "3.0.1",
    "nyc": "15.1.0",
    "prettier": "3.1.0",
    "release-it": "17.0.0",
    "supertest": "6.3.3",
    "supervisor": "0.12.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@hitokoto/koa-jsonp": "3.0.7",
    "@hitokoto/koa-respond": "3.0.3",
    "@koa/bodyparser": "^5.0.0",
    "@koa/cors": "^4.0.0",
    "@sentry/integrations": "7.80.1",
    "@sentry/node": "7.80.1",
    "@sentry/tracing": "7.80.1",
    "NeteaseCloudMusicApi": "4.13.6",
    "async": "3.2.5",
    "bytes": "3.1.2",
    "chalk": "5.3.0",
    "commander": "11.1.0",
    "cron": "3.1.6",
    "fast-json-stringify": "5.9.1",
    "flatstr": "1.0.12",
    "got": "13.0.0",
    "humanize-number": "0.0.2",
    "ioredis": "5.3.2",
    "joi": "17.11.0",
    "js-yaml": "4.1.0",
    "koa": "2.14.2",
    "koa-compress": "5.1.1",
    "koa-favicon": "2.1.0",
    "koa-helmet": "7.0.2",
    "koa-query-pretty": "0.3.0",
    "koa-router": "12.0.1",
    "lodash": "4.17.21",
    "nconf": "0.12.1",
    "nconf-yaml": "1.0.2",
    "passthrough-counter": "1.0.0",
    "pify": "6.1.0",
    "semver": "7.5.4",
    "sequelize": "6.35.0",
    "uuid": "9.0.1",
    "winston": "3.11.0"
  },
  "packageManager": "pnpm@8.10.5"
}

{
  "name": "hitokoto",
  "version": "1.7.0-dev",
  "description": "Fast & Powerful Hitokoto API Framework.",
  "main": "core.js",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "node core",
    "dev": "yarn nodemon core.js -D",
    "pnpify": "yarn dlx @yarnpkg/pnpify",
    "lint": "eslint ./src/**/*.js ./adapter/**/*.js ./test/**/*.js core.js",
    "watch": "yarn dlx supervisor --watch \".\" --extensions \"js,json\" --exec \"yarn\" -- \"start\"",
    "test": "jest --verbose",
    "commit": "yarn dlx git-cz",
    "release": "yarn dlx release-it",
    "changelog": "yarn dlx -p conventional-changelog-cli conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0 -n .changelog.config.js",
    "prepare": "husky install",
    "postinstall": "sh -c 'if [ command -v ./node_modules/.bin/husky ]; then ./node_modules/.bin/husky install; fi;'"
  },
  "repository": "https://github.com/hitokoto-osc/hitokoto-api",
  "author": "a632079 <a632079@qq.com>",
  "license": "MIT",
  "private": true,
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.20.2",
    "@babel/eslint-parser": "7.19.1",
    "@babel/preset-env": "7.20.2",
    "@commitlint/cli": "17.2.0",
    "@commitlint/config-conventional": "17.2.0",
    "@types/jest": "27.5.2",
    "commitizen": "4.2.5",
    "conventional-changelog-conventionalcommits": "4.6.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.27.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-html": "6.2.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.9.0",
    "eslint-plugin-n": "^15.2.2",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "jest-extended": "2.0.0",
    "koa-livereload": "0.2.0",
    "lint-staged": "12.5.0",
    "nodemon": "2.0.20",
    "nyc": "15.1.0",
    "prettier": "2.7.1",
    "regenerator-runtime": "0.13.10",
    "release-it": "14.14.3",
    "supertest": "6.3.1",
    "supervisor": "0.12.0"
  },
  "dependencies": {
    "@hitokoto/koa-jsonp": "3.0.7",
    "@hitokoto/koa-respond": "3.0.3",
    "@sentry/integrations": "7.19.0",
    "@sentry/node": "7.19.0",
    "@sentry/tracing": "7.19.0",
    "NeteaseCloudMusicApi": "4.8.2",
    "async": "3.2.4",
    "bytes": "3.1.2",
    "chalk": "4.1.2",
    "commander": "9.4.1",
    "cron": "1.8.2",
    "fast-json-stringify": "4.2.0",
    "flatstr": "1.0.12",
    "got": "11.8.5",
    "humanize-number": "0.0.2",
    "ioredis": "5.2.4",
    "joi": "17.7.0",
    "js-yaml": "4.1.0",
    "kcors": "2.2.2",
    "koa": "2.13.4",
    "koa-bodyparser": "4.3.0",
    "koa-compress": "5.1.0",
    "koa-favicon": "2.1.0",
    "koa-helmet": "6.1.0",
    "koa-query-pretty": "0.3.0",
    "koa-router": "10.1.1",
    "lodash": "4.17.21",
    "mysql2": "2.3.3",
    "nconf": "0.12.0",
    "nconf-yaml": "1.0.2",
    "nodemailer": "6.8.0",
    "passthrough-counter": "1.0.0",
    "pify": "5.0.0",
    "semver": "7.3.8",
    "sequelize": "6.25.6",
    "uuid": "8.3.2",
    "winston": "3.8.2"
  }
}

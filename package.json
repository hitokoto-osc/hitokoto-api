{
  "name": "hitokoto",
  "version": "1.7.0-dev",
  "description": "Fast & Powerful Hitokoto API Framework.",
  "main": "core.js",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "node core",
    "dev": "yarn nodemon core.js -D",
    "pnpify": "yarn dlx @yarnpkg/pnpify",
    "lint": "eslint ./src/**/*.js ./adapter/**/*.js ./test/**/*.js core.js",
    "watch": "yarn dlx supervisor --watch \".\" --extensions \"js,json\" --exec \"yarn\" -- \"start\"",
    "test": "jest --verbose",
    "commit": "yarn dlx git-cz",
    "release": "yarn dlx release-it",
    "changelog": "yarn dlx -p conventional-changelog-cli conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0 -n .changelog.config.js",
    "prepare": "husky install",
    "postinstall": "sh -c 'if [ command -v ./node_modules/.bin/husky ]; then ./node_modules/.bin/husky install; fi;'"
  },
  "repository": "https://github.com/hitokoto-osc/hitokoto-api",
  "author": "a632079 <a632079@qq.com>",
  "license": "MIT",
  "private": true,
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.15.5",
    "@babel/eslint-parser": "7.15.7",
    "@babel/preset-env": "7.15.6",
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@types/jest": "27.0.3",
    "commitizen": "4.2.4",
    "conventional-changelog-conventionalcommits": "4.6.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-html": "6.1.2",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jest": "24.4.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "5.1.0",
    "husky": "7.0.2",
    "jest": "27.3.1",
    "jest-extended": "1.1.0",
    "koa-livereload": "0.2.0",
    "lint-staged": "11.1.2",
    "nodemon": "2.0.15",
    "nyc": "15.1.0",
    "prettier": "2.4.1",
    "regenerator-runtime": "0.13.9",
    "release-it": "14.11.5",
    "supertest": "6.1.6",
    "supervisor": "0.12.0"
  },
  "dependencies": {
    "@hitokoto/koa-jsonp": "3.0.7",
    "@hitokoto/koa-respond": "3.0.3",
    "@sentry/integrations": "6.15.0",
    "@sentry/node": "6.15.0",
    "@sentry/tracing": "6.15.0",
    "NeteaseCloudMusicApi": "4.2.0",
    "async": "3.2.1",
    "bytes": "3.1.1",
    "chalk": "4.1.2",
    "commander": "8.2.0",
    "cron": "1.8.2",
    "fast-json-stringify": "2.7.11",
    "flatstr": "1.0.12",
    "got": "11.8.3",
    "humanize-number": "0.0.2",
    "ioredis": "4.28.0",
    "joi": "17.4.2",
    "js-yaml": "4.1.0",
    "kcors": "2.2.2",
    "koa": "2.13.4",
    "koa-bodyparser": "4.3.0",
    "koa-compress": "5.1.0",
    "koa-favicon": "2.1.0",
    "koa-helmet": "6.1.0",
    "koa-query-pretty": "0.3.0",
    "koa-router": "10.1.1",
    "lodash": "4.17.21",
    "mysql2": "2.3.2",
    "nconf": "0.11.3",
    "nconf-yaml": "1.0.2",
    "nodemailer": "6.6.3",
    "passthrough-counter": "1.0.0",
    "pify": "5.0.0",
    "semver": "7.3.5",
    "sequelize": "6.9.0",
    "uuid": "8.3.2",
    "winston": "3.3.3"
  }
}
